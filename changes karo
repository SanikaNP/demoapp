toggleBold() {
    const focusedCell = this.gridApi.getFocusedCell(); // Get the currently focused cell
    if (focusedCell) {
        const cellElement = this.gridApi.getCellRendererInstances({
            rowNodes: [focusedCell.rowNode],
            columns: [focusedCell.column]
        })[0];
        
        if (cellElement) {
            cellElement.getGui().style.fontWeight = cellElement.getGui().style.fontWeight === 'bold' ? 'normal' : 'bold';
        }
    }
}

toggleItalic() {
    const focusedCell = this.gridApi.getFocusedCell();
    if (focusedCell) {
        const cellElement = this.gridApi.getCellRendererInstances({
            rowNodes: [focusedCell.rowNode],
            columns: [focusedCell.column]
        })[0];

        if (cellElement) {
            cellElement.getGui().style.fontStyle = cellElement.getGui().style.fontStyle === 'italic' ? 'normal' : 'italic';
        }
    }
}

toggleUnderline() {
    const focusedCell = this.gridApi.getFocusedCell();
    if (focusedCell) {
        const cellElement = this.gridApi.getCellRendererInstances({
            rowNodes: [focusedCell.rowNode],
            columns: [focusedCell.column]
        })[0];

        if (cellElement) {
            cellElement.getGui().style.textDecoration = cellElement.getGui().style.textDecoration === 'underline' ? 'none' : 'underline';
        }
    }
}
