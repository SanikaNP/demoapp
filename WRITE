/* Global Styles */
body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4; /* Light background color for better contrast */
    margin: 0;
    padding: 20px; /* Adding padding to the body */
}

/* Header Styles */
h2 {
    color: #333; /* Dark color for the main headers */
    margin-bottom: 20px; /* Space below headers */
}

/* Button Styles */
button {
    background-color: #007bff; /* Bootstrap primary color */
    color: white;
    border: none;
    border-radius: 4px; /* Rounded corners */
    padding: 10px 15px; /* Padding for better click area */
    cursor: pointer; /* Pointer cursor on hover */
    transition: background-color 0.3s; /* Smooth transition */
    margin: 5px; /* Space between buttons */
}

button:hover {
    background-color: #0056b3; /* Darker shade on hover */
}

/* Table Styles */
table {
    width: 100%;
    border-collapse: collapse; /* Removes gaps between table cells */
    margin-bottom: 20px; /* Space below tables */
}

th, td {
    padding: 10px;
    border: 1px solid #ccc; /* Light border around cells */
    text-align: left; /* Left-aligning text */
}

th {
    background-color: #f2f2f2; /* Light gray background for headers */
    font-weight: bold; /* Bold text for headers */
}

/* Modal Styles */
.modal-header {
    background-color: #007bff; /* Header background color */
    color: white; /* Header text color */
}

.modal-body {
    padding: 20px; /* Padding inside the modal body */
}

/* Input Styles */
input[type="text"],
input[type="date"],
textarea,
select {
    width: 100%; /* Full width */
    padding: 10px; /* Padding inside input fields */
    margin-top: 5px; /* Space above input fields */
    margin-bottom: 15px; /* Space below input fields */
    border: 1px solid #ccc; /* Light border */
    border-radius: 4px; /* Rounded corners */
}

/* Radio Button Styles */
label {
    margin-right: 10px; /* Space between labels */
}
