deleteDepartment(): void {
    if (this.selectedDepartment) { // Check if selectedDepartment is not null
        if (confirm('Are you sure you want to delete this department?')) {
            this.departmentService.deleteDepartment(this.selectedDepartment.id!).subscribe(() => {
                this.departments = this.departments.filter((d) => d.id !== this.selectedDepartment?.id);
                this.selectedDepartment = null; // Clear the selected department after deletion
            });
        }
    } else {
        alert('No department selected for deletion!');
    }
}
